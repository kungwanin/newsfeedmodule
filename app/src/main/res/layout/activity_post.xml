<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_post"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="in.app.neeraj.trubanewsfeed.PostActivity">

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:layout_alignParentTop="true"
        android:background="@drawable/input_outline"
        android:layout_marginTop="176dp"
        android:id="@+id/titleField"
        android:layout_marginBottom="20dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:hint="Post Title...."
        android:padding="15dp"
        android:singleLine="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:background="@drawable/input_outline"
        android:layout_below="@+id/titleField"
        android:layout_marginTop="11dp"
        android:id="@+id/branchField"
        android:layout_alignEnd="@+id/titleField"
        android:layout_alignStart="@+id/titleField"
        android:hint="Post Branch...."
        android:padding="15dp"
        android:singleLine="true" />

    <Button
        android:text="Submit Post "
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:id="@+id/SubmitBtn"
        android:background="@color/colorPrimary"
        android:layout_alignParentStart="true"
        android:textColor="@color/cardview_light_background" />


    <EditText
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:inputType="textMultiLine"
        android:ems="10"
        android:background="@drawable/input_outline"
        android:layout_below="@+id/branchField"
        android:layout_marginTop="27dp"
        android:id="@+id/DescField"
        android:layout_alignEnd="@+id/branchField"
        android:layout_alignStart="@+id/branchField"
        android:layout_marginBottom="77dp"
        android:hint="Post Description" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@mipmap/add_btn"
        android:id="@+id/imageButton3"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="350dp" />

</RelativeLayout>
